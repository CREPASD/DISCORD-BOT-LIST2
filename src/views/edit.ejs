<body style="background-color: rgb(47, 48, 48)">
    <nav style="position: fixed;height: 64px;width: 100%;z-index: 1000;">
        <div class="nav-wrapper" style="background-color: #2C2F33;">
            <a href="/" class="brand-logo" style="margin-left: 6px; font-family: Josefin Sans; width:265px; height:60px">
                <img src="https://raw.githubusercontent.com/LiquidBlast/discordbotindex-branding/master/logos/logo.png" style="width: 60px; height: 59px; position: absolute">
                <h5 style="font-size: 23px; margin-left: 80px;">Discord Bot Index</h5><img>
                <i class="material-icons"></i>
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <a class="waves-effect waves-light btn" href='/bots' style="background-color:#4cbefd; font-size: 10px; width:100px;">
                    <i class="material-icons right" style="color:#FFF; margin-top: 0px">dashboard</i>Bots</a>
                    
                    <a class="waves-effect waves-light btn" href='/submit' style="background-color:#4cbefd; font-size: 10px; width:100px;">
                        <i class="material-icons right" style="color:#FFF; margin-top: 0px">control_point</i>Add Bot</a>

                <a class="waves-effect waves-light btn" href='/documentation' style="background-color: #4cbefd; font-size: 10px; width:100px;">
                    <i class="material-icons right" style="color:#FFF; margin-top: 0px;">developer_mode</i>Docs</a>

                    <a class="waves-effect waves-light btn" href='/spotlight' style="background-color: #4cbefd; font-size: 10px; width:auto;">
                        <i class="material-icons right" style="color:#FFF; margin-top: 0px;">done</i>Spotlight</a>

                        <a class="waves-effect waves-light btn dropdown-trigger" data-target='dropdown1' href='<%= link %>' style="background-color:#4cbefd; font-size: 10px; width:auto;">
                            <i class="material-icons right" style="color:#FFF; margin-top: 0px">account_circle</i>
                    <%= username %></a>
                    <% if(user !== 0) { %>
                        <ul id='dropdown1' class='dropdown-content'>
                            <li><a href="/apiv1/logout">Logout</a></li>
                          </ul>
                          <script>
                            document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('.dropdown-trigger');
        var instances = M.Dropdown.init(elems);
      });</script>
                          <% } %>    
            </ul>
            <ul id="slide-out" class="sidenav" style="background-color:rgb(144, 147, 148)">
                <li>
                    <div class="user-view">
                        <div class="background" style="background-color:#2C2F33"></div>
                        <% if(user !== 0) { %>
                        <a href="#name" style="color:#3b3b3b"><span class="white-text name">
                                <%= username %></span></a>
                        <a href="/apiv1/logout" style="color:#3b3b3b"><span class="white-text name">
                                Logout</span>
                            <br></a>
                        <% } %>
                        <% if(user == 0) { %>
                        <a href="/apiv1/login" style="color:#3b3b3b"><img class="circle" src="https://raw.githubusercontent.com/LiquidBlast/discordbotindex-branding/master/logos/logo.png"></a>
                        <a href="/apiv1/login" style="color:#3b3b3b"><span class="white-text name">Not Logged In</span><br></a>
                        <% } %>
                    </div>
                </li>
                <% if(user !== 0) { %>
                <!--<li><a href="/profile/<%=user.userid%>"><i class="material-icons">account_circle</i>Profile</a></li>-->
                <li><a href="/submit"><i class="material-icons">add_circle</i>Add Bot</a></li>
                <% } %>
                <% if(user == 0) { %>
                <li><a href="/apiv1/login"><i class="material-icons">cloud</i>Log In</a></li>
                <% } %>
                <li>
                    <div class="divider"></div>
                </li>
                <li><a class="subheader">Directory</a></li>
                <li><a class="waves-effect" href="/documentation"><i class="material-icons">edit</i>Documentation</a></li>
                <li><a class="waves-effect" href="/bots"><i class="material-icons">book</i>Bot Index</a></li>
                <li><a class="waves-effect" href="/search"><i class="material-icons">search</i>Search Bots</a></li>
            </ul>
            <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>
    <section>
        <br>
        <br>
        <br>
        <div class="col s12 m12 l12">
            <div class="card" style="margin: auto; width: auto; background-color: #3b3b3b; align-self: auto; margin-top: 10px;">
                <div class="card-content white-text">
                    <span class="card-title" style="text-align: center; margin-bottom: 10px; margin-top: -10px;">Edit
                        Bot</a>
                    </span>
                    <p style="width: auto; text-align: center; margin: auto; color:#AAA;">You are currently editing
                        <%= decrypted.botname %>!<br>We went ahead and prefilled the form with your current data, when
                        you
                        are done editing, click submit.</p>
                </div>
            </div>
    </section>
    <section>
        <!--Begin new panel to hold the form-->
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card" style="margin: auto; width: auto; background-color: #3b3b3b; align-self: auto; margin-top: 10px;">
                    <div class="card-content">
                        <!--Inner Form Content-->
                        <!--Begin form-->
                        <div class="row">
                            <form class="input-field col s12 white-text" action="/apiv1/edit/" , method="POST">
                                <div class="row">
                                    <div class="input-field col s6 hide">
                                        <input value="<%=decrypted.botid%>" id="bot_id" type="text" class="validate"
                                            required="" name="botid">
                                        <label for="bot_id"><i class="material-icons left">account_circle</i>Bot ID</label>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">You can find this
                                            <a href="https://discordapp.com/developers/applications/me">here</a>
                                        </p>
                                    </div>
                                    <div class="input-field col s12">
                                        <input id="prefix" type="text" class="validate" data-length="40" required=""
                                            name="prefix" value="<%=decrypted.prefix%>">
                                        <label for="prefix"><i class="material-icons left">comment</i>Prefix</label>
                                        <span class="helper-text" data-error="Max. 20 Characters" data-success="Under 40 Characters"
                                            style="font-size: 11px; color: rgb(107, 107, 107)"></span>
                                    </div>
                                    <div class="input-field col s12">
                                        <input id="shortdescription" type="text" class="validate" data-length="140"
                                            required="" name="shortdesc" value="<%=decrypted.shortdesc%>">
                                        <label for="shortdescription"><i class="material-icons left">edit</i>Short
                                            Description</label>
                                        <span class="helper-text" data-error="Max. 140 Characters" data-success="Under 180 Characters"
                                            style="font-size: 11px; color: rgb(107, 107, 107)"></span>
                                    </div>
                                    <div class="input-field col s12">
                                        <input id="botnews" type="text" class="validate" data-length="90" required=""
                                            name="botnews" value="<%=decrypted.newsblurb%>">
                                        <label for="botnews"><i class="material-icons left">edit</i>Bot News</label>
                                        <span class="helper-text" data-error="Max. 90 Characters" data-success="Under 230 Characters"
                                            style="font-size: 11px; color: rgb(107, 107, 107)"></span>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">This is a way to promote
                                            new updates to your bot! If you want to disable updates from showing, set
                                            this to 'none'!</p>
                                    </div>
                                    <div class="input-field col s12">
                                        <textarea id="longdescription" class="materialize-textarea" required="" minlength="300" name="longdesc"><%=decrypted.longdesc%></textarea>
                                        <label for="longdescription"><i class="material-icons left">sort</i>Long
                                            Description</label>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Restricted HTML
                                            supported.</p>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="supportserver" type="text" class="validate" name="supportserver"
                                            value="<%=decrypted.support%>">
                                        <label for="supportserver"><i class="material-icons left">verified_user</i>Support
                                            Server</label>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Optional, but recommended</p>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="github" type="text" class="validate" name="github" value="<%=decrypted.github%>">
                                        <label for="github"><i class="material-icons left">code</i>Public Git</label>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Optional - Please make
                                            sure your bot token is not listed publicly on any git platform.</p>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="donations" type="text" class="validate" name="donate" value="<%=decrypted.donate%>">
                                        <label for="donations"><i class="material-icons left">favorite</i>Donation Page</label>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Optional - Kofi, Patreon,
                                            etc.</p>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="website" type="text" class="validate" name="website" value="<%=decrypted.website%>">
                                        <label for="website"><i class="material-icons left">launch</i>Website</label>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Optional, but
                                            recommended.</p>
                                    </div>
                                    <% if(decrypted.accepted == 0) { %>
                                    <div class="input-field col s6">
                                        <input id="hookid" type="text" class="validate" data-length="20" name="hookid"
                                            value="<%=decrypted.hookid%>">
                                        <label for="hookid"><i class="material-icons left">dialpad</i>Webhook ID</label>
                                        <span class="helper-text" data-error="Length Exceeded (20 Char.)" style="font-size: 11px; color: rgb(107, 107, 107)"></span>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Optional - Leave as NULL
                                            or empty to opt out.</p>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="hooktoken" type="text" class="validate" data-length="70" name="hooktoken"
                                            value="<%=decrypted.hooktoken%>">
                                        <label for="hooktoken"><i class="material-icons left">compare_arrows</i>Webhook
                                            Token</label>
                                        <span class="helper-text" data-error="Length Exceeded (70 Char.)" style="font-size: 11px; color: rgb(107, 107, 107)"></span>
                                        <p style="font-size: 11px; color: rgb(107, 107, 107)">Optional - Leave as NULL
                                            or empty to opt out.</p>
                                    </div>
                                    <% } %>
                                    <button class="btn waves-effect waves-light" type="submit" style="background-color: #4cbefd">Submit
                                        <i class="material-icons right">send</i>
                                    </button>
                                    <br>
                                    <br>
                                    <hr>
                                    <% if(decrypted.accepted == 0) { %>
                                    <h6>API Token - Keep This Private!</h6>
                                    <p style="text-align: justify; text-overflow:inherit;">
                                        <%= decrypted.authtoken %>
                                    </p>
                                    <% } %>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--JavaScript at end of body for optimized loading-->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.sidenav');
